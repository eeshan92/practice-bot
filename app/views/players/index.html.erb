<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-lg-12">
    <h2 class="page-header">
      Players
    </h2>
  </div>
  
  <div class="col-lg-8">
    <div class="table-responsive">
      <table class="table table-bordered table-hover table-striped">
        <thead>
          <tr>
            <th><%= sortable "full_name", "Name" %></th>
            <th><%= sortable "handle", "Handle" %></th>
            <th><%= sortable "gender", "Gender" %></th>
          </tr>
        </thead>
        <tbody>
          <% @players.each do |player| %>
            <tr>
              <td><%= link_to player.full_name, player %>
              <td><%= player.handle %></td>
              <td><%= player.gender %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<br>

<%= link_to 'New Player', new_player_path %>
